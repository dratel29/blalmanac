<fieldset>
    <legend>{{ 'quickstart.reset.title'|trans }}</legend>

    {{
        form_start(form, {
            'action': path('fos_user_resetting_reset', {'token': token}),
            'method': 'POST',
            'attr': {
                'class': 'fos_user_resetting_reset',
            }
        })
    }}

    {{ form_widget(form) }}

    <div>
        <input class="btn btn-primary" type="submit" value="{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}" />
    </div>

    {{ form_end(form) }}

    <br/>
    <a href="{{ path('home') }}">{{ 'quickstart.button.home'|trans }}</a>

</fieldset>